generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  IdUser BigInt @id @default(autoincrement())
  name String @db.VarChar(25)
  email String @db.VarChar(30) @unique
  password String @db.VarChar(15)
  ItHasIntegration Boolean

  alls All[]
  habits Habits[]
  notes Notes[]
}

model All {
  idAll BigInt @id @default(autoincrement())
  userId BigInt
  idUser User @relation(fields: [userId], references: [IdUser])
  title String @db.VarChar(80)
}

model Habits {
  idHabits BigInt @id @default(autoincrement())
  userId BigInt
  idUser User @relation(fields: [userId], references: [IdUser])
  title String @db.VarChar(40)
  recentDate DateTime
}

model Notes {
  idNotes BigInt @id @default(autoincrement())
  userId BigInt
  idUser User @relation(fields: [userId], references: [IdUser])
  IsFavorite Boolean @unique
  title String @db.VarChar(40)
  body String @db.VarChar(250)

  favorites Favorites[]
  quotes Quotes[]
}

model Favorites {
  id BigInt @id @default(autoincrement())
  IsFavorite Boolean

  notes Notes? @relation(fields: [IsFavorite], references: [IsFavorite])
}

model Quotes {
  id BigInt @id @default(autoincrement())
  phrase String @db.VarChar(50)
  author String @db.VarChar(25)
  IdFavorite Boolean

  notes Notes? @relation(fields: [IdFavorite], references: [IsFavorite])
}
